body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f4f4f4;
}

#chat-container {
  display: flex;
  width: 900px;
  height:  600px;
  background-color: #fff;
  border: 1px solid #ccc;
